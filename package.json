{
  "name": "desafio-api-nodejs",
  "version": "1.0.0",
  "description": "Desafio API NodeJS, um desafio para principiantes que reúne boas práticas de desenvolvimento de APIs",
  "homepage": "https://github.com/talvanes/desafio-api-nodejs#readme",
  "bugs": {
    "url": "https://github.com/talvanes/desafio-api-nodejs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talvanes/desafio-api-nodejs.git"
  },
  "license": "MIT",
  "author": "Talvanes Ferreira de Sousa",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "dev": "node --env-file .env --watch src/app.ts",
    "db:seed": "node --env-file .env src/database/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "pretest": "dotenv -e .env.test drizzle-kit migrate",
    "test": "dotenv -e .env.test vitest run"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@scalar/fastify-api-reference": "^1.34.2",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.5.0",
    "fastify-pino-pretty": "^5.2.0",
    "fastify-type-provider-zod": "^5.0.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
